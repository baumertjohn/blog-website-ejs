<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<% posts.forEach(function(post, index){ %>
<h1><a href="/post/<%= index %>"><%= post.title %></a></h1>
<% if (post.content.length > 50){ %>
<p><%= post.content.slice(0, 50) + "..." %></p>
<% } else { %>
<p><%= post.content %></p>
<% } %> <% }); %>

<%- include('partials/footer'); -%>
